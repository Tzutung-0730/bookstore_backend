{
    "openapi": "3.0.0",
    "info": {
        "title": "My Bookstore API",
        "description": "這是書店的 API 文件",
        "version": "1.0.0"
    },
    "paths": {
        "/api/auth/Register": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "使用者註冊",
                "operationId": "ba577e61b16ce424e83adf7bf480c44c",
                "requestBody": {
                    "description": "註冊所需的使用者資料",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "username",
                                    "account",
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "username": {
                                        "type": "string",
                                        "example": "Administrator"
                                    },
                                    "account": {
                                        "type": "string",
                                        "example": "admin"
                                    },
                                    "email": {
                                        "type": "string",
                                        "example": "admin@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "admin123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "註冊成功",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "註冊成功"
                                        },
                                        "user": {
                                            "type": "object"
                                        },
                                        "token": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "驗證錯誤"
                    }
                }
            }
        },
        "/api/auth/Login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "使用者登入",
                "operationId": "1d5d42c51423c44d1486c7c5cee8b4f7",
                "requestBody": {
                    "description": "登入所需的帳號與密碼",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "account",
                                    "password"
                                ],
                                "properties": {
                                    "account": {
                                        "type": "string",
                                        "example": "admin"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "admin123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "登入成功",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "登入成功"
                                        },
                                        "token": {
                                            "type": "string"
                                        },
                                        "user": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "帳號或密碼錯誤"
                    }
                }
            }
        },
        "/api/auth/Logout": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "使用者登出",
                "operationId": "5bbc0da1ea2cecb59fbb05f11195108d",
                "responses": {
                    "200": {
                        "description": "已登出",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "已登出"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "登出失敗"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/menu/GetMenu": {
            "get": {
                "tags": [
                    "Menu"
                ],
                "summary": "取得所有菜單項目",
                "operationId": "705497f30f71e5155f123df76c9ad1ac",
                "responses": {
                    "200": {
                        "description": "成功取得菜單",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "title": {
                                                "type": "string",
                                                "example": "首頁"
                                            },
                                            "url": {
                                                "type": "string",
                                                "example": "/Home"
                                            },
                                            "icon": {
                                                "type": "string",
                                                "example": "pi-home"
                                            },
                                            "order": {
                                                "type": "integer",
                                                "example": 1
                                            },
                                            "visible_for": {
                                                "type": "array",
                                                "items": {
                                                    "type": "string"
                                                },
                                                "example": [
                                                    "user",
                                                    "admin"
                                                ]
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "驗證錯誤"
                    }
                }
            }
        },
        "/api/menu/CreateMenu": {
            "post": {
                "tags": [
                    "Menu"
                ],
                "summary": "新增一筆 Menu",
                "operationId": "a7f06c71a9fccfab98ea2a14513c5a00",
                "requestBody": {
                    "description": "新增菜單所需資料",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "title",
                                    "url"
                                ],
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "example": "首頁"
                                    },
                                    "url": {
                                        "type": "string",
                                        "example": "/Home"
                                    },
                                    "icon": {
                                        "type": "string",
                                        "example": "pi-home"
                                    },
                                    "order": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "visible_for": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        },
                                        "example": [
                                            "user",
                                            "admin"
                                        ]
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "新增成功",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "menu_id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "title": {
                                            "type": "string",
                                            "example": "首頁"
                                        },
                                        "url": {
                                            "type": "string",
                                            "example": "/Home"
                                        },
                                        "icon": {
                                            "type": "string",
                                            "example": "pi-home"
                                        },
                                        "order": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "visible_for": {
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            },
                                            "example": [
                                                "user",
                                                "admin"
                                            ]
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "驗證錯誤"
                    }
                }
            }
        },
        "/api/menu/UpdateMenu/{id}": {
            "put": {
                "tags": [
                    "Menu"
                ],
                "summary": "更新特定 Menu",
                "operationId": "a1a8b7630f43bc8ee04922bfc5736119",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Menu 的 ID",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                ],
                "requestBody": {
                    "description": "更新資料",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "example": "回首頁"
                                    },
                                    "url": {
                                        "type": "string",
                                        "example": "/Home"
                                    },
                                    "icon": {
                                        "type": "string",
                                        "example": "pi-home"
                                    },
                                    "order": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "visible_for": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        },
                                        "example": [
                                            "user"
                                        ]
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "更新成功",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "menu_id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "title": {
                                            "type": "string",
                                            "example": "回首頁"
                                        },
                                        "url": {
                                            "type": "string",
                                            "example": "/Home"
                                        },
                                        "icon": {
                                            "type": "string",
                                            "example": "pi-home"
                                        },
                                        "order": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "visible_for": {
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            },
                                            "example": [
                                                "user"
                                            ]
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "驗證錯誤"
                    }
                }
            }
        },
        "/api/menu/DeleteMenu/{id}": {
            "delete": {
                "tags": [
                    "Menu"
                ],
                "summary": "刪除特定 Menu",
                "operationId": "18fa9252576d7b6369583cd9fe65dfec",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Menu 的 ID",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "刪除成功",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "刪除成功"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "找不到指定 Menu"
                    }
                }
            }
        },
        "/api/scrapebooks/ScrapeBooks": {
            "get": {
                "tags": [
                    "ScrapeBooks"
                ],
                "summary": "顯示爬蟲進度頁面",
                "operationId": "e3ba173dd9db3735bd721dc884b6f381",
                "responses": {
                    "200": {
                        "description": "成功返回爬蟲進度頁面"
                    }
                }
            }
        },
        "/api/scrapebooks/StartScraping": {
            "post": {
                "tags": [
                    "ScrapeBooks"
                ],
                "summary": "啟動爬蟲",
                "operationId": "d291cf6cc60dccdd416cfb7cf0baf083",
                "responses": {
                    "200": {
                        "description": "爬蟲已啟動"
                    },
                    "500": {
                        "description": "爬蟲啟動失敗"
                    }
                }
            }
        },
        "/api/scrapebooks/StopScraping": {
            "post": {
                "tags": [
                    "ScrapeBooks"
                ],
                "summary": "停止爬蟲",
                "operationId": "f575f202d2f0e40dc2d1e0a1b7b5b65c",
                "responses": {
                    "200": {
                        "description": "爬蟲已停止"
                    },
                    "500": {
                        "description": "停止爬蟲時發生錯誤"
                    }
                }
            }
        },
        "/api/scrapebooks/GetScrapeProgress": {
            "get": {
                "tags": [
                    "ScrapeBooks"
                ],
                "summary": "獲取爬蟲進度",
                "operationId": "5cc4880db4bbc7241a5bfec626acfe5e",
                "responses": {
                    "200": {
                        "description": "成功返回爬蟲進度",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "progress": {
                                            "properties": {
                                                "current": {
                                                    "type": "integer",
                                                    "example": 10
                                                },
                                                "total": {
                                                    "type": "integer",
                                                    "example": 100
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "status": {
                                            "type": "string",
                                            "example": "爬蟲正在進行中"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "獲取進度失敗"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Auth",
            "description": "Auth"
        },
        {
            "name": "Menu",
            "description": "Menu"
        },
        {
            "name": "ScrapeBooks",
            "description": "ScrapeBooks"
        }
    ]
}